@model User
@{
    Layout = "~/Views/Shared/_LoginAndRegisterLayout.cshtml";
}


<section class="signup">
    <div class="container">
        <div class="signup-content">
            <form asp-action="RegisterForChef" enctype="multipart/form-data" method="POST" id="signup-form" class="signup-form">
                <h2 class="form-title">Create account</h2>


                <div class="form-group">
                    <input type="text" class="form-input" asp-for="FName" type="text" placeholder="First Name" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-input" asp-for="LName" type="text" placeholder="Last Name" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-input" name="userName" id="username" placeholder="Your Username" />
                </div>
                <div class="form-group">
                    <input type="email" class="form-input" asp-for="Email" id="email" placeholder="Your Email" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" name="Password" id="password" placeholder="Password" />
                    <span toggle="#password" class="zmdi field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-input" name="re_password" id="re_password" placeholder="Repeat your password" />
                </div>
                <div class="form-group">
                    <input type="file" asp-for="ImageFile" class="form-input" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="submit" name="submit" id="submit" class="form-submit" value="Sign up" />
                </div>
            </form>

            <p style="text-align:center;">
                <a asp-controller="LoginAndRegister" asp-action="Register" class="loginhere-link">Register as a user</a>
            </p>

            <p class="loginhere">
                Have already an account ? <a asp-controller="LoginAndRegister" asp-action="Login" class="loginhere-link">Login here</a>
            </p>

        </div>
    </div>
</section>

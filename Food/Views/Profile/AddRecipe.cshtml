@model Food.Models.Recipe
@using Microsoft.AspNetCore.Http

@{
    var chefId = Context.Session.GetInt32("ChefId");
    var chefName = Context.Session.GetString("UserName");
}
@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            
            <div class="col-lg-12 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Add Recipe</h4>
                    </div>
                    <div class="content">
                        <form asp-action="AddRecipe" enctype="multipart/form-data" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label>Recipe Name</label>
                                        <input class="form-control border-input" asp-for="RecipepName" placeholder="Recipe Name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Duration Time</label>
                                        <input asp-for="RecipeTime" class="form-control border-input" placeholder="Duration Time">
                                        <span asp-validation-for="RecipeTime" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                           

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="control-label"></label>
                                        <select asp-for="CategoryId" class="form-control border-input" asp-items="ViewBag.CategoryId"></select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Chef Name</label>
                                        <input asp-for="@chefName" class="form-control border-input" disabled />
                                    </div>
                                </div>
                            </div>
                            

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ingredients</label>
                                        <input asp-for="RecipeIngredients" class="form-control border-input" />
                                        <span asp-validation-for="RecipeIngredients" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Preparation</label>
                                        <input asp-for="RecipePreparation" class="form-control border-input" />
                                        <span asp-validation-for="RecipePreparation" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Recipe Price</label>
                                        <input asp-for="Price" class="form-control border-input" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Recipe Image</label>
                                        <input type="file" asp-for="ImageFile" class="form-control border-input" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="text-center">
                                <input type="submit" value="Create" class="btn btn-info btn-fill btn-wd" />
                            </div>
                            <span asp-validation-for="RecipeStatus" class="text-danger"></span>
                            <span asp-validation-for="RecipeDate" class="text-danger"></span>


                            
                            <div class="clearfix"></div>

                        </form>

                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

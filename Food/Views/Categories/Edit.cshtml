@model Food.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12 col-md-7">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Category</h4>
                    </div>
                    <div class="content">
                        <form asp-action="Edit" enctype="multipart/form-data"  method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label>Category Name</label>
                                        <input asp-for="CategoryName" class="form-control border-input" placeholder="Category Name">
                                        <span asp-validation-for="CategoryName" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Category Image</label>
                                        <input type="file" asp-for="ImageFile" class="form-control border-input" placeholder="Category Image">
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>


                            <div class="text-center">
                                <input type="submit" value="Save" class="btn btn-info btn-fill btn-wd" />
                            </div>
                            



                            <div class="clearfix"></div>

                        </form>

                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>


        </div>
    </div>
</div>





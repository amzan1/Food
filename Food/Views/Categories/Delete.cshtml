@model Food.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="header">
                        <h4 class="title">Delete</h4>
                        <p class="category">Are you sure you want to delete the @Model.CategoryName</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover">
                            <thead>
                            <th>Category Name</th>
                            <th>Category Image</th>
                            <ht></ht>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td>@Model.CategoryName</td>
                                        <td><img src=@Url.Content("~/Images/" + Model.ImagePath) width="120px" height="100px" style="border-radius:30px;" /></td>

                                    </tr>
                                <tr>
                                    
                                    <td colspan="3" class="text-center">
                                        <form asp-action="Delete">
                                            <input type="hidden" asp-for="Id" />
                                            <input type="submit" value="Delete" class="btn btn-info btn-fill btn-wd" /> |
                                            <a asp-action="Index">Back to List</a>
                                        </form>
                                    </td>
                                </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model Food.Models.Testimonial
@using Microsoft.AspNetCore.Http

@{
    var userid = Context.Session.GetInt32("ChefId");
    if (userid == null)
    {
        userid = Context.Session.GetInt32("UserId");
    }
}
@{
  

    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Profile</h4>
                </div>
                <div class="content">
                    <form asp-action="Create">
                        <div class="row">
                            <div class="col-md-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="@userid" class ="form-control"></input>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TestimonialText" class="control-label"></label>
                                    <textarea asp-for="TestimonialText" rows="5" class="form-control border-input" placeholder="Here can be your description"></textarea>
                                    <span asp-validation-for="TestimonialText" class="text-danger"></span>
                                </div>
                                <div class="text-center">
                                    <input type="submit" value="Add testmonial" class=" btn btn-info btn-fill btn-wd" />
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


